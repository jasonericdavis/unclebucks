
---
import Layout from '../layouts/Layout.astro'
import Container from '../components/Container.astro'
import Card from '../components/MemberCard.astro';

---
<style>
  .content {
    font-size: 20px;
    line-height: 1.50;
  }

  p {
    margin-bottom:1.5em;
    font-family: 'DM Sans', sans-serif;
  }

  img {
		border-radius: 7px;
    /* box-shadow: 10px 4px 8px 0 rgba(0,0,0,0.2); */
	}

  .ceo {
    /* width: 60%; */
    margin: auto;
  }

  .ceo-name {
    font-size: 32px;
    text-align: center;
  }

  .ceo-title {
    font-size: 24px;
    text-align: center;
  }

  .ceo-img {
    height: 300px;
    margin: auto;
  }

  .ceo-bio {
    font-size: 20px;
    line-height: 2em;
  }

  .cta-button {
    background-color: #224F7D;  /* #4897e8 */;
    box-shadow: 7px 7px 8px 0 rgba(0,0,0,0.2);
    color: #fff;
    font-family: Trebuchet MS;
    font-size: 24px;
    font-weight: 800;
    font-style: normal;
    text-decoration: none;
    padding: 8px 18px;
    border: 0px solid #000;
    border-radius: 10px;
    display: inline-block;
  }
  .cta-button:hover{
    background-color: #448fdc;
  }
  .cta-button:active{
    transform: scale(0.95);
  }
</style>
